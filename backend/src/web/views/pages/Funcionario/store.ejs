<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script src="js/request.js"></script>


<!-- Begin Page Content -->
<div class="container-fluid">
    
  <!-- Page Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Novo Funcionário</h1>
    <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
  </div>

  <!-- Content Row -->

  <div class="row">

     <!-- Basic Card Example -->
     
      <div class="card shadow">
          <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Adicionar novo funcionário</h6>
          </div>
          <div class="card-body">

              <div class="form-row">

                <div class="col-md-4 mb-3">
                  <label for="validationDefault01">CPF</label>
                  <input type="text" class="form-control" id="cpf" name="cpf" required>
                </div>

                <div class="col-md-4 mb-3">
                  <label for="validationDefault02">Nome Completo</label>
                  <input type="text" class="form-control" id="name" name="name" required>
                </div>

                <div class="col-md-4 mb-3">
                  <label for="inputState">Permissão</label>
                  <select id="level" name="level" class="form-control">
                    <option selected>Choose...</option>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                  </select>
                </div>
               

              </div>

              <div class="form-row">

                <div class="col-md-4 mb-3">
                  <label for="validationDefault01">Telefone</label>
                  <input type="tel" class="form-control" id="tel" name="tel" required>
                </div>

                <div class="col-md-4 mb-3">
                  <label for="validationDefault02">Data de nascimento</label>
                  <input type="date" class="form-control" id="ano_nasc" name="ano_nasc" required>
                </div>

                

              </div>

              <div class="form-row">
                
                <div class="col-md-4 mb-3">
                  <label for="validationDefaultUserid">Username</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="inputGroupPrepend2">@</span>
                    </div>
                    <input type="text" class="form-control" id="user_name" name="user_name" aria-describedby="inputGroupPrepend2" required>
                  </div>
                </div>

                <div class="col-md-4 mb-3">
                  <label for="validationDefault02">Senha de acesso ao sistema</label>
                  <input type="password" class="form-control" id="password" name="password" required>
                </div>


              </div>



              <button class="btn btn-primary" onclick="storeFunc();" id="btnEnviarDados">Adicionar</button>
              <button class="btn btn-danger" type="reset" id="btnEnviar">Limpar</button>
            
       

          </div>
      </div>
    
  </div>




</div>
<!-- /.container-fluid -->


<!-- Modal Confirm -->
<div class="modal fade " id="modalConfirm" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <h4>Funcionário cadastrado com sucesso!</h4>
      </div>
      <div class="modal-footer">
        <a href="/index" type="button" class="btn btn-primary">OK!</a>
      </div>
    </div>
  </div>
</div>


<!-- Modal Loading-->
<div class="modal fade " id="modalLoading" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">OK</button>
      </div>
    </div>
  </div>
</div>