  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header" id="titleModal">
        <h4>Adicionar Produtos</h1>
      </div>
      <div id="loading"></div>
      <div class="modal-body">

        <div id="modalNewProductContent">

          
              <div class="form-row">
                <div class="col mb-3">              
                  
                  <label for="inputState">Imagem</label>
                  <div class="custom-file">                    
                    <input type="file" class="custom-file-input" id="thumbnailNew">
                    <label class="custom-file-label" for="customFile">Escolha a imagem do produto...</label>
                  </div>               

                </div>
              </div>

              <div class="form-row">

                <div class="col mb-3">
                  <label for="validationDefault01">Código do produto</label>
                  <input type="text" class="form-control" id="id_productNew" name="id_productNew" placeholder="Código automático" required disabled>
                </div>

                <div class="col mb-3">
                  <label for="validationDefault02">Nome </label>
                  <input type="text" class="form-control" id="nameNew" name="nameNew" required>
                </div>         

              </div>

              <div class="form-row">
                

                <div class="col mb-3">
                  <label for="validationDefault02">Preço (em reais)</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <span class="input-group-text" id="inputGroupPrepend2">R$:</span>
                    </div>
                    <input type="number" class="form-control" id="priceNew" name="priceNew" required>
                  </div>
                </div>

                <div class="col mb-3">
                  <label for="inputState">Categorias</label>
                  <select id="categorieNew" name="categorieNew" class="form-control">
                    <option selected>Choose...</option>
                    
                  </select>
                </div>


              </div>

              <div class="row">
                <div class="col-md-12 mb-3">
                  <label for="validationDefault01">Descrição</label>
                  <input type="textarea" class="form-control" id="describeNew" name="describeNew" required>
                </div>
              </div>

          
        </div>


      </div>
      <div class="modal-footer">
        <div id="buttonCloseModal"> <a href="/gerenciarProdutos" type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close">Fechar</a> </div>
        <div id="buttonAddNew"></div>
      </div>
    </div>
  </div>
</div>


