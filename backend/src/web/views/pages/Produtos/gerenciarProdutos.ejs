        <div id="modalUpdateContentDelete">

          
          <span>Produtos deletados não podem ser recuperado!</span>
                    
        </div>


      </div>
      <div class="modal-footer">
        <div id="buttonCloseModalDelete"> <a href="#" type="button" class="btn btn-secondary" data-dismiss="modal" aria-label="Close">Fechar</a> </div>
        <div id="buttonDeleteConfirm"></div>
      </div>
    </div>
  </div>
</div>


<script>
  // Add the following code if you want the name of the file appear on select
  $(".custom-file-input").on("change", function() {
    var fileName = $(this).val().split("\\").pop();
    $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
  });
</script>